{
  "manifest_version": 2,
  "name": "Wordful",
  "description": "A personal quote tab",
  "version": "1.0.0",
  "icons": {
    "16": "./assets/icons/icon16.png",
    "48": "./assets/icons/icon48.png",
    "128": "./assets/icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "background": {
    "scripts": [
      "./build/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "https://graph.facebook.com/*",
    "https://www.facebook.com/*",
    "https://api.medium.com/*",
    "https://medium.com/*",
    "https://www.reddit.com/*",
    "https://ssl.reddit.com/*"
  ]
}
