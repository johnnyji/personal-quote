{
  "manifest_version": 2,
  "name": "Wordcipher",
  "description": "Learn a new word when you open a new tab!",
  "version": "1.0.0",
  "icons": {
    "16": "./assets/icons/logo_16.png",
    "48": "./assets/icons/logo_48.png",
    "128": "./assets/icons/logo_128.png"
  },
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "background": {
    "scripts": [
      "./build/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "identity",
    "storage",
    "tabs"
  ]
}
